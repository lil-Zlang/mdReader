{
  "name": "mdreader",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared",
    "cli"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build -w shared && npm run build -w server && npm run build -w client && npm run build -w cli",
    "server": "npm run dev -w server",
    "client": "npm run dev -w client",
    "mdr": "node cli/dist/index.js"
  },
  "dependencies": {
    "highlight.js": "^11.11.1"
  }
}
